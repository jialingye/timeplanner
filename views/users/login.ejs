<!DOCTYPE html>
<html lang="en">
<%-include('../partial/head.ejs')%>
<body>
  <nav class="navbar navbar-expand-lg green font">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Time Planner</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active blue" aria-current="page" href="#">Create</a>
          </li>
          <li class="nav-item">
            <a class="nav-link brown" href="#">Focus</a>
          </li>
          <li class="nav-item">
            <a class="nav-link grey" href="#">Ask AI</a>
          </li>
          <li class="nav-item">
          <a class="nav-link mint" href="#">To-Do</a>
        </li>
        <li class="nav-item">
          <a class="nav-link babyblue" href="#">Calendar</a>
        </li>
        <li class="nav-item">
          <a class="nav-link blue" href="#">Analysis</a>
        </li>
      </div>
    </div>
  </nav>
  <div class="container">
    
    <div class="col-6 center">
      <form method="POST" action="/user/login">
        <h1 class="font">Log In</h1>
        <br>
        
        <div class="row mb-3">
         <label for="email" class="col-sm-2 col-form-label">Email:</label>
          <div class="col-sm-10">
          <input type="text" class="form-control" id="email" name="email"><br><br>
        </div>
      </div>
  
        <div class="row mb-3">
          <label for="password" class="col-sm-2 col-form-label">Password:</label>
          <div class="col-sm-10 password-wrapper">
            <div class="row">
              <div class="col-sm-10">
                <input type="password" id="password" class="form-control" name="password">
              </div>
              <div class="col-sm-2">
                <button type="button" class="btn btn-secondary toggle-password">Show</button>
              </div>
            </div>
          </div>
        </div>
        <br>
        <div class="d-grid gap-2">
          <button type="submit" class="btn yellow toggle-password">Log In </button>
        </div>
        
      </form>
    </div>
  
  </div>

      
      <script>
        var togglePassword = document.querySelector(".toggle-password");
        var passwordField = document.getElementById("password");
      
        togglePassword.addEventListener("click", function() {
          if (passwordField.type === "password") {
            passwordField.type = "text";
            togglePassword.textContent = "Hide";
          } else {
            passwordField.type = "password";
            togglePassword.textContent = "Show";
          }
        });
      </script>
</body>
</html>